# OpenCode Office Visualizer - Backend Environment Configuration
# Copy this file to .env and configure for your system

# =============================================================================
# Required: OpenCode Server Connection
# =============================================================================

# URL of the OpenCode server to connect to
OPENCODE_SERVER_URL=http://localhost:4096

# Optional: Basic authentication (if server requires it)
OPENCODE_SERVER_USERNAME=opencode
OPENCODE_SERVER_PASSWORD=

# Enable OpenCode adapter (set to false to disable)
OPENCODE_ADAPTER_ENABLED=true

# Reconnection delay if connection is lost (seconds)
OPENCODE_RECONNECT_DELAY=5

# =============================================================================
# Optional: AI Summaries
# =============================================================================

# Enable AI-powered summaries for agents and tasks
ENABLE_AI_SUMMARIES=false

# Anthropic API key for summaries (requires ENABLE_AI_SUMMARIES=true)
ANTHROPIC_API_KEY=

# Model for AI summaries (default: claude-haiku-4-5-20251001)
SUMMARY_MODEL=claude-haiku-4-5-20251001

# Maximum tokens for AI summaries
SUMMARY_MAX_TOKENS=1000

# =============================================================================
# Optional: Database
# =============================================================================

# Database URL (default: SQLite)
DATABASE_URL=sqlite+aiosqlite:///data/opencode_office.db

# =============================================================================
# Optional: Git Polling
# =============================================================================

# How often to poll git status (seconds)
GIT_POLL_INTERVAL=5

# =============================================================================
# Claude Code Legacy Settings (for backward compatibility)
# =============================================================================

# OAuth token for Claude API access (legacy, not used for OpenCode)
CLAUDE_CODE_OAUTH_TOKEN=

# Docker path translation (legacy, not used for OpenCode)
CLAUDE_PATH_HOST=
CLAUDE_PATH_CONTAINER=
